@model WebComputadorasG3.Models.Rol

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-color: #68B5B6;">
    <div class="container">
        <h2><br /><br />Detalles del Rol</h2>

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.UsuarioRegistro)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.UsuarioRegistro)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.FechaRegistro)
                </dt>
                <dd>
                    @Model.FechaRegistro.ToLongDateString() @Model.FechaRegistro.ToShortTimeString()
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
            <a asp-action="Index">Volver a la Lista</a>
        </div>
    </div>
</div>
