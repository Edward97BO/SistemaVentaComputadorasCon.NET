@model WebComputadorasG3.Models.Persona

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #68B5B6;">

    <div class="container">
        <h2><br /><br />Crear Persona</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Tipo de Persona</label>
                        <select asp-for="TipoPersona" class="form-control">
                            <option>Empleado</option>
                            <option>Cliente</option>
                            <option>Proveedor</option>
                        </select>
                        <span asp-validation-for="TipoPersona" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tipo de Dcoumento</label>
                        <select asp-for="TipoDocumento" class="form-select">
                            <option>Carnet de Identidad</option>
                            <option>Pasaporte</option>
                            <option>Tarjeta de Residencia</option>
                        </select>
                        <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Número de Documento</label>
                        <input asp-for="NumDocumento" class="form-control" />
                        <span asp-validation-for="NumDocumento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Dirección</label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />|
                        <a asp-action="Index">Volver a la Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
