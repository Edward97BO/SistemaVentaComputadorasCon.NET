@model WebComputadorasG3.Models.Persona

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #68B5B6;">
    <div class="container">
        <h2><br /><br />Eliminar Persona</h2>
        <h3>¿Está seguro que desea eliminar la Persona?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Tipo de Persona</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoPersona)
                </dd>
                <dt class="col-sm-2">Nombre</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">Tipo de Documento</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoDocumento)
                </dd>
                <dt class="col-sm-2">Número de Documento</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumDocumento)
                </dd>
                <dt class="col-sm-2">Dirección</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
                <dt class="col-sm-2">Teléfono</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">Usuario</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UsuarioRegistro)
                </dd>
                <dt class="col-sm-2">Fecha de Registro</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaRegistro)
                </dd>
                <dt class="col-sm-2">Estado</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index">Volver a la Lista</a>
            </form>
        </div>
    </div>
</div>