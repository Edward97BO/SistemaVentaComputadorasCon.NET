@model WebComputadorasG3.Models.Ventum

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #68B5B6;">
    <div class="container">
        <h1><br /><br />Eliminar Venta</h1>

        <h3>¿Está seguro que desea eliminar la Venta?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Tipo de Comprobante</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoComprobante)
            </dd>
            <dt class="col-sm-2">Número de Comprobante </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumComprobante)
            </dd>
            <dt class="col-sm-2">Total</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Total)
            </dd>
            <dt class="col-sm-2">Usuario Registro</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsuarioRegistro)
            </dd>
            <dt class="col-sm-2">Fecha de Registro</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaRegistro)
            </dd>
            <dt class="col-sm-2">Estado </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class="col-sm-2">Cliente</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdClienteNavigation.Nombre)
            </dd>
            <dt class="col-sm-2">Empleado</dt>
            <dd>
                @Html.DisplayFor(model => model.IdUsuarioNavigation.Nombre)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index">Volver a la Lista</a>
        </form>
    </div>
</div>
