@model WebComputadorasG3.Models.DetalleVentum

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: #68B5B6;">

    <div class="container">
        <h1><br /><br>Crear Venta a Detalle</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Número de Comprobante</label>
                        <select asp-for="IdVenta" class="form-control" asp-items="ViewBag.IdVenta"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Artículo</label>
                        <select asp-for="IdArticulo" class="form-control" asp-items="ViewBag.IdArticulo"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label"></label>
                        <input type="number" asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label  class="control-label">Descuento (%)</label>
                        <input type="number" asp-for="Descuento" class="form-control" />
                        <span asp-validation-for="Descuento" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />|
                        <a asp-action="Index">Volver a la Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
